html, body
  width 100%
  height 100%
  box-sizing border-box
  padding 0
  margin 0

body
  min-width 1280px
  overflow-x auto

.hidden
  display: none !important

@media screen,print
  nowrap
    white-space: nowrap

  div,
  span,
  button,
  h1,
  h2,
  h3,
  h4,
  p,
  ol,
  input
    outline 0 solid transparent
    box-sizing border-box

  ::selection
    background rgb(160, 171, 222)
    color inherit
    text-shadow inherit

