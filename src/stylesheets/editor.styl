@require "mixins/page-text"

editor-width = 700px
editor-header-width = editor-width - 40

header-control-shadow = rgb(52, 54, 90)

user-select()
  -moz-user-select arguments
  -khtml-user-select arguments
  -webkit-user-select arguments
  -o-user-select arguments
  user-select arguments

#edit-description
  text-align center

#editor-frame
  display block
  overflow auto
  border none
  width editor-width px
  box-sizing border-box

#editor-header, #editor-footer
  position absolute
  display flex
  flex-direction row
  justify-content center
  align-items stretch

  left 20px
  z-index 1
  text-align center
  padding 8px 0
  background-color white
  width editor-header-width
  line-height 28px

  font-size 18px
  font-family Ubuntu, Verdana
  color #777

#editor-container
  position relative
  display flex
  width editor-width px
  min-width editor-width px
  background #fff
  box-shadow 1px 1px 1px header-control-shadow

  .toolbar-button
    user-select none
    padding 6px 0
    text-shadow 2px 2px 1px #EEE
    cursor pointer

    &:hover
      color black

  #editor-header
    top 0
    height 58px

  #editor-footer
    bottom 0
    height 48px

  .toolbar-section
    flex 1
    text-align center

  .toolbar-section:first-child
    text-align left

  .toolbar-section:last-child
    text-align right

  .font-control
    font-family Serif
    width 2.5em
    height 100%
    padding 0
    margin-left 0.5em
    margin-right 0.5em
    box-sizing border-box

  .toolbar-font-button
    position relative
    top 4px
    line-height 1.1em
    text-shadow 1px 1px 1px #fff
    color #252525
    margin 0
    margin-right 0.5em
    padding-left 1em
    padding-right 1em
    color inherit
    min-width 44px

#doc-word-count
  position absolute
  left 0

#dropbox-sync
  position absolute
  right 0

#toggle-bold
  font-weight bold

#toggle-italics
  font-style italic

#toggle-strikethrough
  text-decoration line-through

#loaded-document
  background #fff

  width 600px
  padding 6em 1.5em 6em 1.5em
  margin 0 auto
  box-sizing border-box

  page-text()

#document-page
  margin: 0.8cm

  font-size 12px
  color black
  font-family Georgia, PT Serif, Times New Roman, serif
  overflow-x visible
  width 46em
  padding 6em 1.5em 6em 1.5em
  margin-left auto
  margin-right auto
  word-wrap break-word
  
  h1, h2, h3, h4 
    font-weight normal
    font-family inherit
    text-align center
    margin 0
    padding 0
    line-height 1.1em

  h1 
    padding-bottom 24px
    font-size 48px

  h2 
    font-size 36px
    padding-top 36px
    padding-bottom 36px
    page-break-before always
  
  h3 
    font-size 24px
    padding-bottom 96px
    line-height 1.5em

#edit-description
  font-family inherit
  font-size 24px

.chapter-body
  outline none

  p, div 
    font-family inherit
    text-indent 30px
    margin 0
    line-height 1.5em
    font-size 18px

  hr 
    width 20%
    margin-top 24px
    margin-bottom 24px
    margin-left auto
    margin-right auto
    background-color black

  blockquote 
    margin-left 1em
    page-break-inside avoid
  